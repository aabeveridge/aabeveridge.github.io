#!/bin/bash

######################################################
##  aaronbeveridge.com
######################################################

######################################################
## My personal website is built with Pandoc using
## markdown. Site navigation is created with Pandoc's
## include-before-body function by inserting nav.html
## into every page's HTML when it is built by Pandoc.
###################################################### 

#Home page
pandoc ~/aabeveridge.github.io/home/home.md \
--css ~/aabeveridge.github.io/pandoc.css \
--template ~/aabeveridge.github.io/template.html \
--output index.html \
--smart \
--include-before-body=nav.html \
--title-prefix="Welcome"

#CV page
pandoc ~/aabeveridge.github.io/cv/cv.md \
--css ~/aabeveridge.github.io/pandoc.css \
--template ~/aabeveridge.github.io/template.html \
--output ~/aabeveridge.github.io/cv/cv.html \
--smart \
--include-before-body=nav.html \
--title-prefix="CV"

#Projects page
pandoc ~/aabeveridge.github.io/projects/projects.md \
--css ~/aabeveridge.github.io/pandoc.css \
--template ~/aabeveridge.github.io/template.html \
--output ~/aabeveridge.github.io/projects/projects.html \
--smart \
--include-before-body=nav.html \
--title-prefix="Projects" 
